<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"

    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#52EBEBEB"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#52EBEBEB"    >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                android:id="@+id/blog_image_id"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:src="@drawable/ic_launcher_background"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:id="@+id/blog_blogtitle_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14.3sp"
                android:textColor="@color/text_black"
                android:letterSpacing="0.01"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                tools:text="Software Testing
Help Blog"/>

                <LinearLayout
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/blog_bookedmark_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/badge_blog" />

                    <ImageView
                        android:id="@+id/blog_like_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/heart_blog" />

                    <TextView
                        android:id="@+id/blog_count_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/montserrat"
                        android:text="12"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>