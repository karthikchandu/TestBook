<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text= "LEVEL 15 PASSED"
        android:gravity="center_horizontal|center_vertical"
        android:textAlignment="center"
        android:textSize="13sp"
        android:fontFamily="@font/montserrat"
        android:background="@color/colorPrimaryGreen"
        android:textColor="@color/white"
        android:letterSpacing="0.01"
        />

        <TextView
            android:layout_marginTop="24dp"
            android:id="@+id/alert_txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14.7sp"
            android:textAlignment="center"
            android:textColor="@color/text_black"
            android:letterSpacing="0.03"
            android:gravity="center_horizontal"
            android:text="You have passed 15 Levels.
Keep improving to complete test."
            />
    <ImageView
        android:layout_margin="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ribbon"/>
<Button
    android:layout_marginTop="8.7dp"

    android:layout_marginBottom="8.7dp"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:layout_gravity="center"
    android:background="@color/colorbutton"
    android:fontFamily="@font/gadugib"
    android:textColor="#fff"
    android:textStyle="bold"
    android:textSize="14.7sp"
    android:text="Share"/>
</LinearLayout>